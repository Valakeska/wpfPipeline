        <ComboBox Name="CBUser" HorizontalAlignment="Left" Margin="593,327,0,0" VerticalAlignment="Top" Width="192" FontSize="20" Height="29" Loaded="CBUser_Loaded" >

        </ComboBox>
        <TextBox x:Name="ImageTb" Margin="78,347,237,0" FontSize="20" Height="35" VerticalAlignment="Top" Text=""/>
        <RichTextBox x:Name ="OpisanieProfile" Margin="78,231,237,0" Background="#FFF9F9F9" FontSize="20" Height="95" VerticalAlignment="Top"/>
    </Grid>
</Window>
